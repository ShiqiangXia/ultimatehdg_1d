classdef Functional_info
    properties
        %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
        % problem 
        type % type of functional
             % 1  J(u) = (u,g)
             % 2  J(u) = < du*n, psi>
             
        exact_primal_func % exact f primal problem
        exact_adjoint_func % PDE_info infor about the adjoint problem
        
        %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
        % mesh 
        mesh0 % initial mesh
        num_iteration % number of iteration
        
        %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
        % method
        GQ % Gauss Quadrature points
        
        
        %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
        %
        
        
        refinement % 1: "uniform"; 2: Adapt I; 3:Adapt II
        final_plot % plot or not;
        
        

        
    end
    methods
        function obj = Functional_info(type, primal_pde, adjoint_pde,mesh0,num_iteration,GQ,refinement,final_plot)
            obj.type = type;
            obj.primal_pde = primal_pde;
            obj.adjoint_pde = adjoint_pde;
            obj.mesh0 = mesh0;
            obj.num_iteration = num_iteration;
            obj.GQ = GQ;
            obj.refinement = refinement;
            obj.final_plot = final_plot;
            
        end
        
    end
end